import { RepoBase } from './repositories.base';
import { <%= table_name %> } from '../models/<%= table_name.toLowerCase() %>.model'
import { Pool, QueryResult } from 'pg';

export class <%= table_name %>Repo extends RepoBase {

    constructor() {
        super();
    }

    /**
     * lấy tất cá, hoặc 1 phần của danh sách dữ liệu book từ csdl
     */
    public getList(): Promise<<%= table_name %>[]> {
        let queryText = 'select * from <%= table_name.toLowerCase() %>s';

        console.info('Excute: ' + queryText);
        let pResult;

            pResult = this._pgPool.query(queryText)


        return pResult.then(result => {
            let <%= table_name.toLowerCase() %>s: <%= table_name %>[] = result.rows.map(r => {
                let <%= table_name.toLowerCase() %> = new <%= table_name %>();
                <% properties.forEach(p => { %> 
                    <%= table_name.toLowerCase() %>.<%= p.name %> = r.<%= p.name %>;
                <% } ); %>
                return <%= table_name.toLowerCase() %>;
            });
            return <%= table_name.toLowerCase() %>s;
        })
            .catch(err => {
                console.error(err.message);
                return null;
            });
    }

    public getOneById(id): Promise<<%= table_name %>> {
        let queryText = 'select * from test.<%= table_name.toLowerCase() %>s where id=$1';

        console.info('Excute: ' + queryText);

        return this._pgPool.query(queryText,id)
            .then(result => {
                let <%= table_name.toLowerCase() %> = new <%= table_name %>();
                <% properties.forEach(p => { %> 
                    <%= table_name.toLowerCase() %>.<%= p.name %> = result.<%= p.name %>;
                <% } ); %>
                return <%= table_name.toLowerCase() %>;
            });
    }
}