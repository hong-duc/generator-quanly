import { PipeTransform, Pipe } from '@angular/core';
import { <%= table.name %> } from '../shared/<%= table.name.toLowerCase() %>.model';

@Pipe({
    table.name: '<%= table.name %>Filter'
})
export class <%= table.name %>FilterPipe implements PipeTransform {

    transform(value: <%= table.name %>[], args: string): <%= table.name %>[] {
        let filter: string = args ? args.toLocaleLowerCase() : null;
        return filter ? value.filter((<%= table.name.toLowerCase() %>: <%= table.name %>) =>
            <%= table.name.toLowerCase() %>.table.name.toLocaleLowerCase().indexOf(filter) !== -1) : value;
    }
}
